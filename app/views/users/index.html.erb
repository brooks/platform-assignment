<div class='container'>
  <h1 class='title'>User Index</h1>
  <div class='col-md-8 col-md-offset-2' id='user-index-container'>
    <div class='col-md-5 col-md-offset-1 user-column'>
      <div class='form-group user-search-form'>
        <label for="search-bar">Search</label>
        <%= text_field_tag :search_query, nil, placeholder: "name, address, or phone", class: 'form-control', id: 'search-bar' %>
      </div>
      <div class='table-container'>
        <table class="table table-hover">
          <% @users.each do |user| %>
            <tr class='clickable' user-id=<%= user.id %>>
              <td><a href="#"><%= user.name %></a></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>

    <div class='col-md-5 col-md-offset-1 user-column'>
      <%= render partial: "show", locals: {user: @users.first} %>
    </div>
  </div>
</div>